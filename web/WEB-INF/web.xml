<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4">
    <display-name>jee1</display-name>
    <filter>
        <filter-name>trimFilter</filter-name>
        <filter-class>by.gsu.epamlab.model.filters.TrimFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>trimFilter</filter-name>
        <servlet-name>login</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>trimFilter</filter-name>
        <servlet-name>signup</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>trimFilter</filter-name>
        <servlet-name>addtask</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>start</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.StartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>start</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>signup</display-name>
        <servlet-name>signup</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>tasks</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.TaskShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tasks</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addtask</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.TaskAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addtask</servlet-name>
        <url-pattern>/addtask</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>taskact</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.TaskActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>taskact</servlet-name>
        <url-pattern>/taskact</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>fileupload</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileupload</servlet-name>
        <url-pattern>/fileupload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>filedownload</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.FileDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>filedownload</servlet-name>
        <url-pattern>/filedownload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>filedelete</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.FileDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>filedelete</servlet-name>
        <url-pattern>/filedelete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>emptybin</servlet-name>
        <servlet-class>by.gsu.epamlab.controllers.BinEmptyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>emptybin</servlet-name>
        <url-pattern>/emptybin</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.html</location>
    </error-page>
    <context-param>
        <param-name>uploadDirectory</param-name>
        <param-value>C:/files</param-value>
    </context-param>
    <context-param>
        <param-name>impl</param-name>
        <param-value>db</param-value>
        <!--<param-value>memory</param-value>-->
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <taglib>
        <taglib-uri>/jstl/core</taglib-uri>
        <taglib-location>/WEB-INF/c.tld</taglib-location>
    </taglib>
</web-app>